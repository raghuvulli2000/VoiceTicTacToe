<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voice Tac Toe"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textColor="#E1470D"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/SinglePlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single Player"
        android:textSize="40sp"
        android:backgroundTint="#E1470D"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="140dp" />
    <Button
        android:id="@+id/multiPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Two Players"
        android:textSize="40sp"
        android:backgroundTint="#E1470D"
        app:layout_constraintBottom_toTopOf="@id/SinglePlayer"
        android:layout_marginBottom="20dp" />
    <ImageView
        android:id="@+id/homePic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Title"
        app:layout_constraintBottom_toTopOf="@id/multiPlayer" />

    <com.alan.alansdk.button.AlanButton
        android:id="@+id/alan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>